<Window x:Class="BezierVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BezierVisualizer.Views"
        Title="Bezier Visualizer" Height="700" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />         
            <ColumnDefinition Width="Auto" />      
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>         
            <RowDefinition Height="*"/>            
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Alfa:" Margin="0,0,5,0"/>
                <Slider x:Name="AlfaSlider" Minimum="0" Maximum="360" Width="150" ValueChanged="Slider_ValueChanged"/>
                <TextBlock x:Name="AlfaValue" Width="40" Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="Beta:" Margin="0,0,5,0"/>
                <Slider x:Name="BetaSlider" Minimum="0" Maximum="360" Width="150" ValueChanged="Slider_ValueChanged"/>
                <TextBlock x:Name="BetaValue" Width="40" Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="Resolution:" Margin="0,0,5,0"/>
                <Slider x:Name="ResolutionSlider" Minimum="2" Maximum="50" Width="150" ValueChanged="Slider_ValueChanged" Value="10"/>
                <TextBlock x:Name="ResolutionValue" Width="40" Margin="5,0,0,0"/>
            </StackPanel>

        </StackPanel>

        <views:CanvasView x:Name="CanvasArea" Grid.Row="1" Grid.Column="0"/>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <StackPanel Margin="0,10,0,0">
                <Button x:Name="LoadNormalMapButton" 
                        Content="Wczytaj mapę wektorów normalnych"
                        Width="200"
                        Margin="10"
                        Click="LoadNormalBitMap_Click"/>
                <CheckBox x:Name="UseNormalBitMap"
                          Content="Użyj mapy wektorów normalnych"
                          Margin="10"
                          Checked="UseNormalBitMat_Checked"
                          Unchecked="UseNormalMap_Checked"/>
            </StackPanel>

            <CheckBox x:Name="ShowBezierPolygon" Content="Wielobok Beziera" Margin="10,0,0,0" Checked="Checkbox_Changed" Unchecked="Checkbox_Changed"/>
            <CheckBox x:Name="ShowTriangleMesh" Content="Siatka trójkątów" Margin="10,0,0,0" Checked="Checkbox_Changed" Unchecked="Checkbox_Changed"/>
            <CheckBox x:Name="ShowFilledTriangles" Content="Wypełnione trójkąty" Margin="10,0,0,0" Checked="Checkbox_Changed" Unchecked="Checkbox_Changed"/>
            <CheckBox x:Name="UseNormalMap" Content="Użyj mapy normalnych" Margin="10,0,0,0" Checked="Checkbox_Changed" Unchecked="Checkbox_Changed"/>
            <StackPanel Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="kd (rozproszenie)" />
                    <TextBlock x:Name="KdValue" Margin="10,0,0,0"/>
                </StackPanel>
                <Slider x:Name="KdSlider" Minimum="0" Maximum="1" Value="0.8" TickFrequency="0.1" Width="120" ValueChanged="Slider_ValueChanged"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ks (zwierciadlane)" />
                    <TextBlock x:Name="KsValue" Margin="10,0,0,0"/>
                </StackPanel>
                <Slider x:Name="KsSlider" Minimum="0" Maximum="1" Value="0.5" TickFrequency="0.1" Width="120" ValueChanged="Slider_ValueChanged"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="m (połysk)" />
                    <TextBlock x:Name="MValue" Margin="10,0,0,0"/>
                </StackPanel>
                <Slider x:Name="MSlider" Minimum="1" Maximum="100" Value="20" TickFrequency="1" Width="120" ValueChanged="Slider_ValueChanged"/>
            </StackPanel>
            <StackPanel Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Kąt światła w stopniach" />
                    <TextBlock x:Name="LightAngleValue" Text="0°" Margin="10,0,0,0"/>
                </StackPanel>
                <Slider x:Name="LightAngleSlider" 
                        Minimum="0" 
                        Maximum="360" 
                        Value="0" 
                        Width="150" 
                        Margin="10" 
                        TickFrequency="10" 
                        IsSnapToTickEnabled="False"
                        ValueChanged="LightAngleSlider_Changed"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Wysokość światła"/>
                    <TextBlock x:Name="LightZValue" Text="0°" Margin="10, 0, 0, 0"/>
                </StackPanel>
                <Slider x:Name="LightZSlider"
                        Minimum="0"
                        Maximum="2"
                        Value="1"
                        Width="100"
                        Margin="10"
                        />
                <CheckBox x:Name="AnimateLight" Content="Animuj światło" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
